<h1 style="color: white; margin: 35px 10px;">Groups</h1>
<div class="container" >
    <div class="row">
      <div class="col-sm-8">
        <div class="jumbotron" style="background: white; border-radius:10px; margin-top: 10px;">
          
          <% if flash.has?(:message) %>
           <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <p><%= flash[:message] %> </p>
            </div>
          <% end %>
          <h1> Edit Group... </h1>

          <form  action="/groups/<%= @group.id%>" method="post" >
            <input id="hidden" type="hidden" name="_method" value="PATCH">
            <div class="form-group">
              <label class="sr-only" for="form-description">Name</label>
              <input type="text" name="name" class="form-name form-control" id="form-name" value= "<%= @group.name%>">
            </div>
            <button type="submit" class="btn btn-info">Update</button>
          </form>

          <h1> Delete Group? </h1>

          <form action="/groups/<%= @group.id %>/delete" method="post">
            <input type="hidden" id="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
 
        </div><!--end jumbotron -->
      </div><!--end col-sm-8 -->
    </div><!-- end row -->
  </div><!-- end container -->