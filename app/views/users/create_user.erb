<h3>Sign Up</h3>
<form action="/signup" method="POST">
  <% if flash.has?(:message) %>
  <p style="color:#f0ad4e;"><%= flash[:message] %> </p>
  <% end %>
  <p><input type="text" autocomplete="off" name="username" placeholder="Username:"></p>
  <p><input type="email" autocomplete="off" name="email" placeholder="Email:"></p>
  <p><input type="password" autocomplete="off" name="password" placeholder="Password:"></p>
  <input type="submit" value="Sign Up">
</form>