<h1 style="color: white; margin: 35px 10px;">Groups</h1>


  <div class="container" >
    <div class="row">
      <div class="col-sm-8">
        <div class="jumbotron" style="background: white; border-radius:10px; margin-top: 10px;">
          

          <h3>Sign Up</h3>
          <form action="/signup" method="POST">
            <% if flash.has?(:message) %>
            <p style="color:#f0ad4e;"><%= flash[:message] %> </p>
            <% end %>
            <p><input type="text" autocomplete="off" name="username" placeholder="Username:"></p>
            <p><input type="email" autocomplete="off" name="email" placeholder="Email:"></p>
            <p><input type="password" autocomplete="off" name="password" placeholder="Password:"></p>
            <button type="submit" class="btn btn-info">Submit</button>
          </form>

      </div><!--end jumbotron -->
    </div><!--end col-sm-8 -->
  </div><!-- end row -->
</div><!-- end container -->