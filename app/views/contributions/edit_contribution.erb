<h1 style="color: white; margin: 35px 10px;">Groups</h1>
  <div class="container" >
    <div class="row">
      <div class="col-sm-8">
        <div class="jumbotron" style="background: white; border-radius:10px; margin-top: 10px;">
         
          <% if flash.has?(:message) %>
              <div class="alert alert-success alert-dismissible" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <p><%= flash[:message] %> </p>
              </div>
          <% end %>

          <h1> Edit Contribution... </h1>

          <form  action="/contributions/<%= @contribution.id%>" method="post" >
            <input id="hidden" type="hidden" name="_method" value="PATCH">
            <div class="form-contribution">
              <label class="sr-only" for="form-description">Title</label>
              <input type="text" name="title" class="form-title form-control" id="form-title" value= "<%= @contribution.title%>">
              <input type="text" name="content" class="form-content form-control" id="form-content" value= "<%= @contribution.content%>">
            </div>
            <button type="submit" class="btn btn-info">Update</button>
          </form>

          <h1> Delete Contribution? </h1>

          <form action="/contributions/<%= @contribution.id %>/delete" method="post">
              <input type="hidden" id="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>

      </div><!--end jumbotron -->
    </div><!--end col-sm-8 -->
  </div><!-- end row -->
</div><!-- end container -->