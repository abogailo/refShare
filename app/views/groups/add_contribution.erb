
<h1 style="color: white; margin: 35px 10px;">Groups</h1>
  <div class="container" >
    <div class="row">
      <div class="col-sm-8">
        <div class="jumbotron" style="background: white; border-radius:10px; margin-top: 10px;">
         
        <% if flash.has?(:message) %>
           <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <p><%= flash[:message] %> </p>
            </div>
        <% end %>
        
        <h1> Add Contributions </h1>
        <form  action="/groups/<%= @group.id %>/add_contributions" method="post" >
            <input type="text" name="title" placeholder="Contribution Name..." class="form-name form-control" id="form-name" >
            <input type="text" name="content" placeholder="Contribution Content..." class="form-content form-control" id="form-content" >
            <input type="hidden" id="form-group_name" name="<%= @group.name %>" value="<%= @group.name %>">
          <button type="submit" class="btn btn-success">Create</button>
        </form> 
  
        </div><!--end jumbotron -->
      </div><!--end col-sm-8 -->
    </div><!-- end row -->
  </div><!-- end container -->